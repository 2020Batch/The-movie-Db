<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.themoviedb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".login.view.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".home.HomePageActivity" />
        <activity android:name=".login.view.RegisterActivity" />
        <activity android:name=".login.view.LoginActivity" />
        <activity android:name=".movies.detail.view.MovieDetailScreenActivity" />
        <activity android:name=".movies.list.view.PopularMoviesActivity" />
        <activity android:name=".people.list.view.PopularPeopleActivity" />
        <activity android:name=".people.list.view.PopularPeopleDetailWebView"/>
    </application>

</manifest>